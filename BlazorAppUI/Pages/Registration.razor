@page "/registration"
@using Shared.Components.Login

<PageTitle>Index</PageTitle>
<div class="row">
    <div class="col-6">
        <h3>Register</h3>
        <div class="container">
            <form>
                <div class="form-group">
                    <label for="id">ID</label>
                    <input type="text" class="form-control" id="id" @bind="id" />
                </div>
                <div class="form-group">
                    <label for="nickname">Nickname</label>
                    <input type="text" class="form-control" id="nickname" @bind="nickname" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" @bind="password" />
                </div>
                <div class="form-group">
                    <label for="verifyPassword">Verify Password</label>
                    <input type="password" class="form-control" id="verifyPassword" @bind="verifyPassword" />
                </div>
                <div class="form-group">
                    <label for="contact">Contact</label>
                    <input type="text" class="form-control" id="contact" @bind="contact" />
                </div>
                <div class="form-group">
                    <label for="bankName">Name of Bank</label>
                    <input type="text" class="form-control" id="bankName" @bind="bankName" />
                </div>
                <div class="form-group">
                    <label for="accountNumber">Account Number</label>
                    <input type="text" class="form-control" id="accountNumber" @bind="accountNumber" />
                </div>
                <div class="form-group">
                    <label for="accountHolder">Account Holder</label>
                    <input type="text" class="form-control" id="accountHolder" @bind="accountHolder" />
                </div>
                <div class="form-group">
                    <label for="subscriptionCode">Subscription Code</label>
                    <input type="text" class="form-control" id="subscriptionCode" @bind="subscriptionCode" />
                </div>
                <button type="button" class="btn btn-primary mt-3" @onclick="Submit">Register</button>
            </form>
        </div>
    </div>
</div>



@code {
    private string id;
    private string nickname;
    private string password;
    private string verifyPassword;
    private string contact;
    private string bankName;
    private string accountNumber;
    private string accountHolder;
    private string subscriptionCode;

    private void Submit()
    {
        // Handle registration logic here
        Console.WriteLine($"ID: {id}, Nickname: {nickname}, Password: {password}, Verify Password: {verifyPassword}, Contact: {contact}, Bank Name: {bankName}, Account Number: {accountNumber}, Account Holder: {accountHolder}, Subscription Code: {subscriptionCode}");
    }
}
